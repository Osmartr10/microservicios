@model IEnumerable<AppCliente.Models.Libro>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            LISTA LIBROS |
            <a asp-controller="Libro" asp-action="Create" class="btn btn-success btn-fw">Crear Nuevo</a>
        </h3>

    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        ID Libro
                                    </th>
                                    <th>
                                        Titulo
                                    </th>
                                    <th>
                                        Año
                                    </th>
                                    <th>
                                        Editorial
                                    </th>
                                    <th>
                                        Autores
                                    </th>
                                    <th>
                                        Opciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Idlibro)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Titulo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Anio)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Editorial)
                                        </td>
                                        <td>
                                            @{
                                                var lista = ViewBag.autores;
                                            }
                                            <ul class="lista">
                                                @foreach (var autor in item.Libroautores)
                                                {
                                                    @foreach (var val in lista)
                                                    {
                                                        if (val.Value == autor.Idautor.ToString())
                                                        {
                                                            <li>
                                                                @val.Text
                                                            </li>
                                                        }
                                                    }
                                                }
                                            </ul>

                                        </td>
                                        <td>
                                            <a asp-controller="Libro" asp-action="Edit"
                                               asp-route-id="@item.Idlibro" class="btn btn-warning btn-fw">Editar</a> |
                                            <button type="button" class="btn btn-danger btn-fw" onclick="PreEliminar(@item.Idlibro)">Eliminar</button>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Inicio -->
<div class="modal fade" id="eliminarModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel-2" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel-2">Eliminar Libro</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="IdEliminar" />
                <p>¿Esta seguro que quiere eliminar al Libro?</p>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="Eliminar()" class="btn btn-danger">Si,Eliminar</button>
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Fin -->
<script src="~/js/Libro.js"></script>